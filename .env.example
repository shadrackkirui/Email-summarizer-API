# === Google OAuth (Gmail API) ===
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Local dev:
OAUTH_REDIRECT_URI=http://localhost:5000/auth/callback
# After deploying to Render, set this to:
# OAUTH_REDIRECT_URI=https://<your-render-service>.onrender.com/auth/callback

# === Gemini API ===
GEMINI_API_KEY=your-gemini-api-key

# === CORS ===
# Your frontend origin (Vercel URL for production, localhost for dev)
FRONTEND_ORIGIN=http://localhost:5173

# Optional: limit how many emails to fetch per request
MAX_EMAILS=10
